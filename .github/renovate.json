{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gradle",
    "github-actions"
  ],
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchManagers": [
        "gradle",
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all non-major updates"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "major-update"
      ]
    }
  ]
}
